<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d16"
    android:orientation="vertical"
    android:padding="@dimen/d8">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/d8">

        <TextView
            android:id="@+id/label_kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_matkul"
            android:text="Kelas" />

        <TextView
            android:id="@+id/label_matkul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Matkul" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_kelas"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start" />

            <TextView
                android:id="@+id/label_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>